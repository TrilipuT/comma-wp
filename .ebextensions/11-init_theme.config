commands:
  01_clone_theme:
    command: "rm -rf comma && git clone https://github.com/tini2n/comma.git"
    cwd: /var/app/ondeck/wp-content/themes
  02_init_composer:
    command: "php composer.phar install"
    env:
      COMPOSER_HOME: /var/app/current/wp-content/themes/comma
    cwd: /var/app/ondeck/wp-content/themes/comma
