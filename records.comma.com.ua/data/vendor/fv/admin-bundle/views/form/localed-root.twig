<form method="post" action="{{ this.getSubmitUrl() }}" class="forms">

    {% for field in fields %}
        {{ field | raw }}
    {% endfor %}

    <nav>
        {% for language in languages %}
            <a data-rel="{{ language.code }}" {% if loop.first %}class="active"{% endif %}>{{ language.name }}</a>
        {% endfor %}
    </nav>

    {% for field in groups %}
        <div class="group" data-rel="{{ field.getKey() }}" {% if not loop.first %}style="display: none"{% endif %}>
            {{ field | raw }}
        </div>
    {% endfor %}

    <div class="actions">
        {% if not this.getEntity().isNew() and remove %}
        <button class="btn remove btn-red" type="button">Удалить</button>
        {% endif %}

        <div class="right">
            <button class="btn cancel" type="button">Отменить</button>
            <button class="btn ok btn-black" type="submit">Сохранить</button>
        </div>
    </div>
</form>